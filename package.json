{
  "name": "openchat",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "turbo lint",
    "dev": "bun ./scripts/check-redis.ts && turbo -F web -F server dev",
    "build": "turbo -F server build",
    "build:web": "turbo -F web build",
    "deploy": "bun ./scripts/deploy.ts",
    "check-types": "turbo check-types",
    "verify:prod": "bun ./scripts/prod-canary.ts",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:web": "vitest run apps/web/test",
    "test:server": "vitest run apps/server/test",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:extension": "turbo -F extension dev",
    "build:extension": "turbo -F extension build",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "setup:db": "bun run scripts/setup-db.ts",
    "generate:secrets": "bun run scripts/generate-secrets.ts",
    "convex:dev": "cd apps/server && convex dev",
    "convex:codegen": "cd apps/server && convex codegen",
    "convex:migrate": "bun ./scripts/run-migrations.ts",
    "convex:verify": "bun ./scripts/run-migrations.ts --verify-only",
    "verify:build": "(cd apps/web && bunx vite build) && bunx turbo run build --filter=web --filter=server"
  },
  "dependencies": {
    "@ai-sdk/devtools": "^0.0.6",
    "@ai-sdk/provider-utils": "^3.0.17",
    "@emotion/react": "^11.14.0",
    "@opentech1/cc-sync": "^2.0.12",
    "@vercel/analytics": "^1.5.0",
    "better-sqlite3": "^12.4.6",
    "motion": "^12.23.24",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@react-grab/claude-code": "^0.0.67",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.13",
    "convex": "^1.29.3",
    "oxlint": "^1.30.0",
    "turbo": "^2.6.3",
    "vitest": "^4.0.13",
    "ws": "^8.18.0"
  },
  "overrides": {
    "@peculiar/asn1-schema": "2.6.0"
  },
  "packageManager": "bun@1.3.0"
}
